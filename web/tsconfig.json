{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "jsxFactory": "h",
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "~*": ["./*"]
        }
    },
    "include": ["src/**/*"]
}
