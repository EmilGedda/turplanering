{
    "compilerOptions": {
        "incremental": true,
        "alwaysStrict": true,
        "baseUrl": "./src",
        "importsNotUsedAsValues": "preserve",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "paths": {
            "~*": ["./*"]
        },
        "types": ["jest", "node"]
    },
    "typedocOptions": {
        "inputFiles": ["./src"],
        "mode": "modules",
        "out": "docs",
        "exclude": "**/*.test.jsx",
        "includeDeclarations": true,
        "includeVersion": true,
        "excludeExternals": true
    },
    "include": ["src/**/*"]
}
