{
    "compilerOptions": {
        "outDir": "./bin/",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["dom", "es2015.promise", "es2015"],
        "sourceMap": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "~*": ["./*"]
        }
    },
    "include": ["src/**/*"]
}
