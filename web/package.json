{
    "name": "turplan",
    "version": "1.0.0",
    "description": "Hike map for Sweden",
    "repository": "https://github.com/EmilGedda/turplanering",
    "scripts": {
        "dev": "parcel src/index.html",
        "prod": "parcel build src/index.html --no-cache",
        "tsc": "tsc --noEmit",
        "lint": "eslint src --ext .tsx",
        "fix": "eslint src --ext .tsx --fix",
        "test": "jest",
        "docs": "typedoc --out ./dist/docs"
    },
    "keywords": [],
    "author": "Emil Gedda <emil.gedda@emilgedda.se>",
    "license": "AGPL-3.0",
    "dependencies": {
        "leaflet": "^1.6.0",
        "react": "^16.13.1"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@parcel/transformer-typescript-tsc": "^2.0.0-alpha.3",
        "@parcel/validator-typescript": "^2.0.0-beta.1",
        "@types/enzyme": "^3.10.5",
        "@types/jest": "^26.0.9",
        "@types/jsdom": "^16.2.3",
        "@types/leaflet": "^1.5.17",
        "@types/react-dom": "^16.9.8",
        "@types/react-leaflet": "^2.5.2",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "enzyme": "^3.11.0",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.5",
        "eslint-plugin-react-hooks": "^4.0.8",
        "jest": "^26.2.2",
        "parcel": "^2.0.0-beta.1",
        "parse5": "^6.0.1",
        "prettier": "^2.0.5",
        "react-dom": "^16.13.1",
        "react-leaflet": "^2.7.0",
        "sass": "^1.26.10",
        "ts-jest": "^26.1.4",
        "typedoc": "^0.17.8",
        "typescript": "^3.9.7"
    },
    "babel": {
        "presets": [
            "@babel/preset-react",
            "@babel/preset-typescript"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest"
            ]
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup.test.tsx"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "testPathIgnorePatterns": [
            "setup\\.test\\.tsx?$"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "2020",
            "sourceType": "module",
            "project": "./tsconfig.json",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "plugins": [
            "@typescript-eslint",
            "react",
            "react-hooks",
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:react/recommended",
            "plugin:prettier/recommended",
            "prettier",
            "prettier/react",
            "prettier/@typescript-eslint"
        ]
    },
    "prettier": {
        "semi": false,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 4
    }
}
