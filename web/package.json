{
    "name": "turplan",
    "version": "1.0.0",
    "description": "Hike map for Sweden",
    "repository": "https://github.com/EmilGedda/turplanering",
    "scripts": {
        "dev": "INLINE_RUNTIME_CHUNK=false webpack-dev-server --config=webpack/dev.babel.js",
        "prod": "INLINE_RUNTIME_CHUNK=false webpack -p --config=webpack/prod.babel.js",
        "tsc": "tsc --incremental --noEmit",
        "lint": "eslint src --ext .tsx",
        "fix": "eslint src --ext .tsx --fix",
        "test": "jest",
        "docs": "typedoc --out ./dist/docs"
    },
    "keywords": [],
    "author": "Emil Gedda <emil.gedda@emilgedda.se>",
    "license": "AGPL-3.0-or-later",
    "dependencies": {
        "@lingui/react": "^2.9.2",
        "@material-ui/core": "^4.11.0",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/styles": "^4.10.0",
        "@mdi/svg": "^5.7.55",
        "leaflet": "^1.7.1",
        "mdi-material-ui": "^6.19.0",
        "react": "^16.14.0"
    },
    "devDependencies": {
        "@babel/core": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@babel/register": "^7.12.1",
        "@lingui/cli": "^2.9.2",
        "@lingui/macro": "^2.9.2",
        "@types/enzyme": "^3.10.7",
        "@types/jest": "^26.0.14",
        "@types/jsdom": "^16.2.4",
        "@types/leaflet": "^1.5.19",
        "@types/node": "^14.11.2",
        "@types/react-dom": "^16.9.8",
        "@types/react-leaflet": "^2.5.2",
        "@types/webpack-env": "^1.15.3",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "babel-loader": "^8.1.0",
        "babel-plugin-macros": "^2.8.0",
        "enzyme": "^3.11.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.2",
        "eslint-plugin-react-hooks": "^4.1.2",
        "file-loader": "^6.1.0",
        "fork-ts-checker-webpack-plugin": "^5.2.0",
        "html-webpack-plugin": "^4.5.0",
        "jest": "^26.4.2",
        "parse5": "^6.0.1",
        "prettier": "^2.1.2",
        "react-dom": "^16.14.0",
        "react-hot-loader": "^4.13.0",
        "react-leaflet": "^2.7.0",
        "ts-jest": "^26.4.0",
        "ts-loader": "^8.0.5",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.4"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react",
            [
                "@babel/preset-typescript",
                {
                    "onlyRemoveTypeImports": true
                }
            ]
        ],
        "plugins": [
            "react-hot-loader/babel"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest"
            ]
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup.test.tsx"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "testPathIgnorePatterns": [
            "setup\\.test\\.tsx?$"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "2020",
            "sourceType": "module",
            "project": "./tsconfig.json",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "plugins": [
            "@typescript-eslint",
            "react",
            "react-hooks",
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:react/recommended",
            "plugin:prettier/recommended",
            "prettier",
            "prettier/react",
            "prettier/@typescript-eslint"
        ],
        "rules": {
            "react-hooks/rules-of-hooks": "error",
            "react-hooks/exhaustive-deps": "warn"
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 4
    }
}
