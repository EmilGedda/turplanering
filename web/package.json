{
    "name": "turplan",
    "version": "1.0.0",
    "description": "Hike map for Sweden",
    "repository": "https://github.com/EmilGedda/turplanering",
    "scripts": {
        "dev": "webpack serve --config=webpack/dev.babel.js",
        "prod": "webpack --config=webpack/prod.babel.js",
        "compile": "tsc --incremental --noEmit",
        "lint": "eslint src --ext .tsx,.ts",
        "fix": "eslint src --ext .tsx,.ts --fix",
        "test": "jest",
        "docs": "typedoc --out ./dist/docs"
    },
    "keywords": [],
    "author": "Emil Gedda <emil.gedda@emilgedda.se>",
    "license": "AGPL-3.0-or-later",
    "private": true,
    "browserslist": [
        "> 0.5%, last 2 versions, Firefox ESR, not dead, not IE 11"
    ],
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@lingui/react": "^3.11.1",
        "@mdi/svg": "^6.1.95",
        "@mitch528/mdi-material-ui": "^7.0.0",
        "@mui/icons-material": "^5.0.0",
        "@mui/material": "^5.0.0",
        "@types/proj4": "^2.5.2",
        "ol": "^6.6.1",
        "proj4": "^2.7.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.5",
        "@babel/preset-typescript": "^7.12.1",
        "@babel/register": "^7.12.1",
        "@emotion/babel-plugin": "^11.3.0",
        "@hot-loader/react-dom": "^17.0.1",
        "@lingui/cli": "^3.2.1",
        "@lingui/macro": "^3.2.1",
        "@types/jest": "^27.0.1",
        "@types/jsdom": "^16.2.5",
        "@types/node": "^16.7.4",
        "@types/react": "^17.0.21",
        "@types/react-dom": "^17.0.9",
        "@types/webpack-env": "^1.15.3",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "babel-loader": "^8.2.1",
        "babel-plugin-macros": "^3.1.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^6.0.3",
        "html-webpack-plugin": "^5.0.0-alpha.14",
        "jest": "^27.1.0",
        "jest-environment-jsdom-global": "^3.0.0",
        "jsdom": "^18.0.0",
        "msw": "^0.35.0",
        "prettier": "^2.1.2",
        "react-hot-loader": "^4.13.0",
        "source-map-loader": "^3.0.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.5",
        "typedoc": "^0.22.3",
        "typescript": "^4.4.2",
        "webpack": "^5.6.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^4.0.0",
        "webpack-merge": "^5.4.0",
        "whatwg-fetch": "^3.6.2"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react",
            [
                "@babel/preset-typescript",
                {
                    "onlyRemoveTypeImports": true
                }
            ]
        ],
        "plugins": [
            "react-hot-loader/babel",
            "@emotion"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest"
            ]
        },
        "testEnvironment": "jest-environment-jsdom-global",
        "setupFilesAfterEnv": [
            "<rootDir>/src/setup.test.tsx"
        ],
        "maxWorkers": 1,
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "<rootDir>/src/Mocks.ts",
            "<rootDir>/src/index*"
        ],
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.ts{,x}"
        ],
        "testPathIgnorePatterns": [
            "setup\\.test\\.tsx?$"
        ]
    },
    "eslintIgnore": [
        "*.test.tsx",
        "*.test.ts",
        "Mocks.ts"
    ],
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "2020",
            "sourceType": "module",
            "project": "./tsconfig.json",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "plugins": [
            "@typescript-eslint",
            "react",
            "react-hooks",
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:react/recommended",
            "plugin:prettier/recommended",
            "prettier"
        ],
        "rules": {
            "react-hooks/rules-of-hooks": "error",
            "react-hooks/exhaustive-deps": "off",
            "react/prop-types": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "varsIgnorePattern": "^_",
                    "argsIgnorePattern": "^_"
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "none"
    }
}
